<?xml version="1.0"?>
<config>
     <modules>
        <Melissa_Plugin>
          <version>1.0.0</version>
        </Melissa_Plugin>
     </modules>
     <frontend>
       <routers>
          <routeurfrontend>
              <use>standard</use>
              <args>
                 <module>Melissa_Plugin</module>	<!-- Plugin Name -->
                 <frontName>md</frontName>		<!-- Plugin access like yoursite.com/md/index or yoursite.com/routeurfrontend/index/ -->	<!-- http://127.0.0.1/index.php/md/index -->
              </args>
           </routeurfrontend>
       </routers>
	<layout>
	   <updates>
		<test>
		     <file>test.xml</file>
		 </test>
	    </updates>
	</layout>	
    </frontend>

	<global>
	     <blocks>
		 <test>
		      <class>Melissa_Plugin_Block</class>
		 </test>
	      </blocks>
	</global>
	<!-- http://www.pierrefay.com/magento-create-block-44 -->
	<block type="test/monblock" name="afficher_monbloc" template="test/afficher.phtml" />
</config>
