<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <melissa translate="label" module="mymodule">
            <label>Melissa Data Magento Plugin</label>
            <sort_order>100</sort_order>
        </melissa>
    </tabs>
    <sections>
        <melissa translate="label" module="mymodule">
            <label>Configurable Options</label>
            <tab>melissadata</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
 
            <groups>
                <melissa_group translate="label" module="mymodule">
                    <label>Melissa Data Magento Plugin Extension Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
 
                    <fields>
                        <melissa_input translate="label">
                            <label>Melissa Data Customer ID: </label>
                            <comment>Please enter your Melissa Data Customer ID!</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </melissa_input>
                        <melissa_select translate="label">
                            <label>Use "Address Verification" Service: </label>
                            <comment>Source model provider Magento's default Yes/No values</comment>
                            <frontend_type>select</frontend_type>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </melissa_select>
                        
                         <melissa_select translate="label">
                            <label>Use "Address Autocompletion" Service: </label>
                            <comment>Source model provider Magento's default Yes/No values</comment>
                            <frontend_type>select</frontend_type>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </melissa_select>
                        
                        <melissa_select translate="label">
                            <label>Use "Email Verification" Service: </label>
                            <comment>Source model provider Magento's default Yes/No values</comment>
                            <frontend_type>select</frontend_type>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </melissa_select>
                        
                         <melissa_select translate="label">
                            <label>Use "Phone Verification" Service: </label>
                            <comment>Source model provider Magento's default Yes/No values</comment>
                            <frontend_type>select</frontend_type>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                        </melissa_select>
                        
                    </fields>
                </melissa_group>
            </groups>
        </melissa>
    </sections>
</config>
